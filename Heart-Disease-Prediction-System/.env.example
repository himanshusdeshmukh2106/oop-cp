# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Google Maps API Key
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Twilio Credentials for AI Calling Agent
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your-account-sid-here
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# TESTING: Set this to YOUR phone number during development
# ALL calls will go to this number instead of real hospitals
# PRODUCTION: Comment out this line to call real hospitals
TEST_PHONE_NUMBER=+1234567890

# NOTE: TWILIO_TWIML_APP_SID is NOT needed for outbound calls
# Only needed for browser-based calling (Twilio Client SDK)
# You can safely ignore this
